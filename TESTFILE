#include<iostream>
using namespace std;


class gabby
{
      public:
             public:
             int x, y, sum, diff, prod, quo;
             
             int add()
             {
                 sum=x+y;
                 cout<<sum;
                 return sum;
             }
             int sub()
             {
                 diff=x-y;
                 cout<<diff;
                 return diff;
             }
             int multi()
             {
                 prod=x*y;
                 cout<<prod;
                 return prod;
             }
             int div()
             {
                 if (y==0)
                 {
                 cout<<"You cannot divide by 0"<<endl;
                 return 0;
                 }
                 else
                 {
                 quo=x/y;
                 cout<<quo;
                 return quo;
                 }
                 
             }
//i edited the class. it now has a calculator function.
};

int main()
{
    gabby gab;
    cout<<"Hello world\n\n";
    gab.test();
    cout<<endl;
system("pause");
return 0;
}



